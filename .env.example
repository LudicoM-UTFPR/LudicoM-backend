# Example .env for CockroachDB (copy to .env and fill values)
# JDBC URL - adjust host, port, dbname and sslmode
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:26257/ludicomdb?sslmode=disable
SPRING_DATASOURCE_DRIVER=org.postgresql.Driver
SPRING_DATASOURCE_USERNAME=root
SPRING_DATASOURCE_PASSWORD=

# JPA settings
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=true
SPRING_JPA_HIBERNATE_DIALECT=org.hibernate.dialect.CockroachDialect
SPRING_JPA_FORMAT_SQL=true

# Optional: active profile
#SPRING_PROFILES_ACTIVE=dev
